import javax.swing.*;
public class SearchArray {

	public static void main(String[] args) {

		
		
		int[] numlist = new int[10];
		
		char runagain = 'y';
		
		int searchval;
		
		String msg = "";
		
		//populate the array with random numbers btw 1 & 20
		for (int i = 0; i < numlist.length; i++) {
			
			numlist [i] = (int)(Math.random() * 20 + 1);
			
		}//ends for loop
		
		while (runagain == 'y') {
			
			//clear msg
			msg = "";
			
			searchval = Integer.parseInt(JOptionPane.showInputDialog("Enter Number to search for"));
			
			//perform the search
			for (int i = 0; i< numlist.length; i++) {
				if(searchval == numlist[i]) {
					
					msg += searchval +" was found at position " + i +"\n"; 
				}
				else {
					msg = "Sorry " + searchval + " was not found \n";
				}
			}//end search loop
			
			JOptionPane.showMessageDialog(null, msg);
			
			runagain = JOptionPane.showInputDialog("Perform another search? (y/n)").charAt(0);
		}
		
		
		
//end of main
	}

//	ends class
}
